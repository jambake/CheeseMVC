@{
}

<h1>Remove Cheese</h1>

<p><a asp-controller="Cheese" asp-action="">Cheese List</a></p>

<form method="post">
    @foreach (var cheese in ViewBag.cheeses)
    {
        <input type="checkbox" value="@cheese.CheeseId" id="@cheese.CheeseId" name="cheeseIds"/>
        <label for="@cheese.CheeseId">@cheese.Name</label>
        <br />
    }
    <input type="submit" value="Remove Cheese" />
</form>





